<div class="text-center">
  <h2>新規投稿</h2>
</div>

<div class="row">
  <div class="col-sm-9">
      
    <%= form_with(model: @post, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: '選択して下さい' %>
      </div>
      
      <div class="form-group">
        <%= f.label :surf_spot, 'サーフスポット名' %>
        <%= f.text_field :surf_spot, class: 'form-control'%>
      </div>
      
      <div class="form-group">
        <%= f.label :review, 'レビュー' %>
        <%= f.text_area :review, class: 'form-control'  %>
      </div>
      
      <%= f.submit '投稿' %>
      
    <% end %>
    
  </div>
</div>
  